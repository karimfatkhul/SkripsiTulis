@model MainCRM.Departement

@{
    ViewBag.Title = "Edit";
    ViewBag.SubTitle = "Departement";
}
@Styles.Render("~/Content/AdminLTE/plugins/select2")
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Edit @Html.DisplayFor(model => model.DepartementName)</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm())
            {
                        @Html.AntiForgeryToken()

                        <div class="col-md-8">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.DepartementID)

                            <div class="form-group">
                                <label class="control-label">Departement Name</label>
                                @Html.EditorFor(model => model.DepartementName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DepartementName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label class="control-label">Instance Name</label>
                                @Html.DropDownList("InstanceID", null, htmlAttributes: new { @class = "form-control select2" })
                                @Html.ValidationMessageFor(model => model.InstanceID, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label class="control-label">Departement Manager</label>
                                @Html.EditorFor(model => model.KeyContactName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.KeyContactName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label class="control-label">Departement Email</label>
                                @Html.EditorFor(model => model.KeyContactEmail, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.KeyContactEmail, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label class="control-label">Departement Phone</label>
                                @Html.EditorFor(model => model.KeyContactPhone, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.KeyContactPhone, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label class="control-label">Number of Student</label>
                                @Html.EditorFor(model => model.NumberOfStudent, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NumberOfStudent, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.ActionLink("Back to List", "Departements", "Departement")  |
                                <a href=""><input type="submit" value="Save" class="btn btn-default" /></a>

                            </div>
                        </div>
                    }

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Content/AdminLTE/plugins/select2/js")
    @Scripts.Render("~/Scripts/select2")
    @Scripts.Render("~/Scripts/datatable/menutarget") 
}
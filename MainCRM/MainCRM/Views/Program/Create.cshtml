@model MainCRM.Program

@{
    ViewBag.Title = "Create";
    ViewBag.SubTitle = "Program";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Add New Program</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="col-md-8">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label class="control-label">Program Name</label>
                                @Html.EditorFor(model => model.ProgramName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ProgramName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.ActionLink("Back to List", "Programs", "Modul")  |
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/Scripts/program/menu")
    @Scripts.Render("~/bundles/jqueryval")
}


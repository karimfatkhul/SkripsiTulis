@model MainCRM.Modul

@{
    ViewBag.Title = "Create";
    ViewBag.SubTitle = "Module";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Add New Module</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="col-md-8">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label class="control-label">Program Name</label>                     
                                    @Html.DropDownList("ProgramID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ProgramID, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label class="control-label">Module Title</label>
                                    @Html.EditorFor(model => model.ModulTitle, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ModulTitle, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.ActionLink("Back to List", "Moduls")
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

  @section Scripts {
    @Scripts.Render("~/Scripts/program/menumod");
    @Scripts.Render("~/bundles/jqueryval")
}                  

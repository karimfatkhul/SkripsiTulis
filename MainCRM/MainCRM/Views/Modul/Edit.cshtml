@model MainCRM.Modul

@{
    ViewBag.Title = "Edit";
    ViewBag.SubTitle = "Module";
}
@Styles.Render("~/Content/AdminLTE/plugins/select2")
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Edit @Html.DisplayFor(model => model.ModulTitle)</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="col-md-8">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.ModulID)
                            <div class="form-group">
                                <label class="control-label">Program Name</label>
                                @Html.DropDownList("ProgramID", null, htmlAttributes: new { @class = "form-control select2" })
                                @Html.ValidationMessageFor(model => model.ProgramID, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label class="control-label">Module Title</label>
                                @Html.EditorFor(model => model.ModulTitle, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ModulTitle, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.ActionLink("Back to List", "Moduls")
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/Scripts/program")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Content/AdminLTE/plugins/select2/js");
    @Scripts.Render("~/Scripts/select2");
}

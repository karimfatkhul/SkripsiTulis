
@{
    ViewBag.Title = "SendEmail";
}

<h2>SendEmail</h2>

<form action="/Bidding/SendEmail" method="post">
    <div class="form-group">
        <label class="control-label">Subject</label>
        <input class="form-control" placeholder="Subject:" name="SS">
    </div>
    <div class="form-group">
        <label class="control-label">Message Body</label>
        <textarea id="compose-textarea" class="form-control" style="height: 300px"  name="Pesan">
            @ViewData["Pesan"]
        </textarea>
    </div>
    <input type="submit" name="Submit" value="Say Hello" />

</form>



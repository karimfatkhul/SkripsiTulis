@model MainCRM.Instance

@{
    ViewBag.Title = "Targets";
    ViewBag.SubTitle = "Add an Instance";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Add New Instance</h3>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm())
            {
                        @Html.AntiForgeryToken()

                        <div class="col-md-8">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label class="control-label">Instance Name</label>
                                @Html.EditorFor(model => model.InstanceName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.InstanceName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label class="control-label">Address</label>

                                @Html.EditorFor(model => model.InstanceAddress, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.InstanceAddress, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <label class="control-label">Email</label>

                                @Html.EditorFor(model => model.InstanceEmail, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.InstanceEmail, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <label class="control-label">Phone</label>

                                @Html.EditorFor(model => model.InstancePhone, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.InstancePhone, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.ActionLink("Back to List", "Instances", "Target")  |
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    }

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/Scripts/datatable/menu")
    @Scripts.Render("~/bundles/jqueryval")
}

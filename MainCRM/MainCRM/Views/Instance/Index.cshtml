@model IEnumerable<MainCRM.Instance>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InstanceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InstanceAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InstanceEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InstancePhone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InstanceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstanceAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstanceEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstancePhone)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.InstanceID }) |
                @Html.ActionLink("Details", "Details", new { id = item.InstanceID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.InstanceID })
            </td>
        </tr>
    }

</table>
